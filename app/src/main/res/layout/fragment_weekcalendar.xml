<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WeekCalendarFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#A5E35D"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sunday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="일"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/monday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="월"
                android:textColor="@color/black"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tuesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="화"
                android:textColor="@color/black"
                android:gravity="center"/>

            <TextView
                android:id="@+id/wednesday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="수"
                android:textColor="@color/black"
                android:gravity="center"/>

            <TextView
                android:id="@+id/thursday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="목"
                android:textColor="@color/black"
                android:gravity="center"/>

            <TextView
                android:id="@+id/friday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="금"
                android:textColor="@color/black"
                android:gravity="center"/>

            <TextView
                android:id="@+id/saturday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="토"
                android:textColor="@color/black"
                android:gravity="center"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <GridView
                android:id="@+id/gridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:horizontalSpacing="1dp"
                android:numColumns="7"
                android:verticalSpacing="50dp" />


        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    android:text="0"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    android:text="1"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    android:text="2"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    android:text="3"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    android:text="4"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    android:text="5"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    android:text="6"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    android:text="7"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    android:text="8"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    android:text="9"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    android:text="10"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    android:text="11"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    android:text="12"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    android:text="13"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    android:text="14"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    android:text="15"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    android:text="16"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    android:text="17"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    android:text="18"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    android:text="19"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    android:text="20"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    android:text="21"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    android:text="22"/>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    android:text="23"/>

            </LinearLayout>

            <GridView
                android:id="@+id/week_gridview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/black"
                android:gravity="center"
                android:horizontalSpacing="2dp"
                android:numColumns="7"
                android:verticalSpacing="2dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>